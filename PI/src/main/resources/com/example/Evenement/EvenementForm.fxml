<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.Evenement.Controller.EvenementController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Titre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titreField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                  prefRowCount="3" wrapText="true" GridPane.hgrow="ALWAYS"/>

        <Label text="Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Statut:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statutCombo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Date de début:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <HBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <DatePicker fx:id="dateDebutPicker"/>
            <Spinner fx:id="heureDebutSpinner" prefWidth="80"/>
        </HBox>

        <Label text="Date de fin:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <HBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1">
            <DatePicker fx:id="dateFinPicker"/>
            <Spinner fx:id="heureFinSpinner" prefWidth="80"/>
        </HBox>

        <Label text="Photo:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <VBox spacing="5" GridPane.rowIndex="6" GridPane.columnIndex="1">
            <ImageView fx:id="photoView" fitWidth="200" fitHeight="200" preserveRatio="true"/>
            <Button fx:id="uploadPhotoBtn" text="Choisir une photo" onAction="#handleUploadPhoto"/>
        </VBox>

        <Label text="Régions :" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <VBox spacing="5" GridPane.rowIndex="7" GridPane.columnIndex="1">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="regionSearchField" promptText="Rechercher une région..." prefWidth="300"/>
                <Button text="Ajouter" onAction="#handleAddRegion" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </HBox>
            <ListView fx:id="selectedRegionsListView" prefHeight="100" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label text="Aucune région sélectionnée"/>
                </placeholder>
            </ListView>
            <HBox spacing="10">
                <Button text="Supprimer" onAction="#handleRemoveRegion" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveBtn" text="Enregistrer" onAction="#handleSave"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</VBox>