<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.Evenement.Controller.EvenementListController" spacing="10" style="-fx-padding: 10;">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Ajouter un événement" onAction="#handleAdd"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="eventTable" style="-fx-padding: 5;">
        <columns>
            <TableColumn text="Titre" fx:id="colTitre" prefWidth="150"/>
            <TableColumn text="Type" fx:id="colType" prefWidth="100"/>
            <TableColumn text="Date début" fx:id="colDateDebut" prefWidth="150"/>
            <TableColumn text="Statut" fx:id="colStatut" prefWidth="100"/>
            <TableColumn text="Actions" fx:id="colActions" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>