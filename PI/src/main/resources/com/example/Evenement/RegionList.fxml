<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.Evenement.Controller.RegionListController"
      alignment="TOP_CENTER"
      spacing="35"
      style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #dfe6e9); -fx-padding: 50;">

    <!-- Titre principal -->
    <Label text="🌍 Tableau de Bord des Régions"
           style="-fx-font-size: 32px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;">
        <effect>
            <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.2)" radius="4" spread="0.5" offsetX="0" offsetY="1"/>
        </effect>
    </Label>

    <!-- Séparateur -->
    <Separator prefWidth="1000" style="-fx-opacity: 0.3;"/>

    <!-- Liste des régions -->
    <ListView fx:id="regionTable"
              prefWidth="1000"
              prefHeight="500"
              style="-fx-background-color: white; -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 15; -fx-font-size: 16px;">
        <effect>
            <DropShadow blurType="THREE_PASS_BOX" color="rgba(0,0,0,0.08)" radius="12" offsetX="0" offsetY="4"/>
        </effect>
    </ListView>

    <!-- Boutons d'action -->
    <HBox alignment="CENTER" spacing="30">
        <GridPane hgap="30" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="200" prefWidth="200" maxWidth="200"/>
                <ColumnConstraints hgrow="NEVER" minWidth="200" prefWidth="200" maxWidth="200"/>
            </columnConstraints>

            <Button text="➕ Ajouter une région"
                    onAction="#handleAdd"
                    maxWidth="Infinity"
                    style="-fx-background-color: linear-gradient(to right, #43cea2, #185a9d);
                           -fx-text-fill: white;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 12;
                           -fx-padding: 12 24;
                           -fx-cursor: hand;"
                    GridPane.columnIndex="0"/>

            <Button text="📅 Ajouter un événement"
                    onAction="#handleAddEvent"
                    maxWidth="Infinity"
                    style="-fx-background-color: linear-gradient(to right, #74ebd5, #9face6);
                           -fx-text-fill: #2c3e50;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 12;
                           -fx-padding: 12 24;
                           -fx-cursor: hand;"
                    GridPane.columnIndex="1"/>
        </GridPane>
    </HBox>

</VBox>
