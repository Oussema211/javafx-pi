<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.Evenement.Controller.EventDetailsController"
            style="-fx-background-color: #f8f8f0;">

    <ScrollPane fitToWidth="true" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" style="-fx-background: transparent;">
        <VBox spacing="20" style="-fx-background-color: transparent;">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- En-tête avec bouton retour -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton" text="← Retour" onAction="#handleBack"
                        style="-fx-background-color: #689f38; -fx-text-fill: white; -fx-font-size: 14;"/>
            </HBox>

            <!-- Carte principale de l'événement -->
            <VBox style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-background-radius: 15;">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25"/>
                </padding>

                <!-- Image de l'événement -->
                <ImageView fx:id="eventImage" fitWidth="800" fitHeight="300" preserveRatio="true"
                          style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 10;"/>

                <!-- Titre et Type -->
                <VBox spacing="10" style="-fx-padding: 20 0;">
                    <Label fx:id="eventTitle" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label fx:id="eventType" style="-fx-background-color: #689f38; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 20;"/>
                        <Label fx:id="eventStatus" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 20;"/>
                    </HBox>
                </VBox>

                <!-- Informations temporelles -->
                <HBox spacing="50" style="-fx-padding: 20 0;">
                    <VBox spacing="5">
                        <Label text="Date de début" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
                        <Label fx:id="startDate" style="-fx-font-size: 16; -fx-text-fill: #2c3e50;"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Date de fin" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
                        <Label fx:id="endDate" style="-fx-font-size: 16; -fx-text-fill: #2c3e50;"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Durée" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
                        <Label fx:id="duration" style="-fx-font-size: 16; -fx-text-fill: #2c3e50;"/>
                    </VBox>
                </HBox>

                <!-- Description -->
                <VBox spacing="10" style="-fx-padding: 20 0;">
                    <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
                    <TextFlow fx:id="descriptionFlow" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 5;">
                        <Text fx:id="descriptionText" style="-fx-font-size: 14; -fx-fill: #2c3e50;"/>
                    </TextFlow>
                </VBox>

                <!-- Régions -->
                <VBox spacing="10" style="-fx-padding: 20 0;">
                    <Label text="Régions" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
                    <FlowPane fx:id="regionsFlow" hgap="10" vgap="10"/>
                </VBox>
            </VBox>

            <!-- Actions -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Modifier" onAction="#handleEdit"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20;"/>
                <Button text="Supprimer" onAction="#handleDelete"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20;"/>
                <Button text="Ajouter au calendrier Google" onAction="#handleAddToGoogleCalendar"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane> 