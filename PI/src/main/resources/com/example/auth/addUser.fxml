<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.auth.controller.AddUserController">
    <Text text="Add New User" style="-fx-font: bold 20px 'Calibri'; -fx-fill: #495057; -fx-padding: 0 0 20 0;" />
    
    <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <Label text="Nom (Last Name)" style="-fx-font: bold 13px 'Calibri'; -fx-text-fill: #495057; -fx-padding: 5 0;" />
        <TextField fx:id="nomField" promptText="Enter last name" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0; -fx-font: 14px 'Calibri'; -fx-padding: 10;" />
        
        <Label text="Prénom (First Name)" style="-fx-font: bold 13px 'Calibri'; -fx-text-fill: #495057; -fx-padding: 5 0;" />
        <TextField fx:id="prenomField" promptText="Enter first name" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0; -fx-font: 14px 'Calibri'; -fx-padding: 10;" />
        
        <Label text="Email" style="-fx-font: bold 13px 'Calibri'; -fx-text-fill: #495057; -fx-padding: 5 0;" />
        <TextField fx:id="emailField" promptText="Enter email" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0; -fx-font: 14px 'Calibri'; -fx-padding: 10;" />
        
        <Label text="Password" style="-fx-font: bold 13px 'Calibri'; -fx-text-fill: #495057; -fx-padding: 5 0;" />
        <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0; -fx-font: 14px 'Calibri'; -fx-padding: 10;" />
        
        <Label text="Travail (Occupation)" style="-fx-font: bold 13px 'Calibri'; -fx-text-fill: #495057; -fx-padding: 5 0;" />
        <TextField fx:id="travailField" promptText="Enter occupation" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0; -fx-font: 14px 'Calibri'; -fx-padding: 10;" />
        
        <Label text="Photo URL" style="-fx-font: bold 13px 'Calibri'; -fx-text-fill: #495057; -fx-padding: 5 0;" />
        <TextField fx:id="photoUrlField" promptText="Enter photo URL" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0; -fx-font: 14px 'Calibri'; -fx-padding: 10;" />
        
        <Label text="Numéro de Téléphone" style="-fx-font: bold 13px 'Calibri'; -fx-text-fill: #495057; -fx-padding: 5 0;" />
        <TextField fx:id="numTelField" promptText="Enter phone number" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0; -fx-font: 14px 'Calibri'; -fx-padding: 10;" />
        
        <Label text="Roles (comma-separated)" style="-fx-font: bold 13px 'Calibri'; -fx-text-fill: #495057; -fx-padding: 5 0;" />
        <TextField fx:id="rolesField" promptText="Enter roles (e.g., admin,user)" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0; -fx-font: 14px 'Calibri'; -fx-padding: 10;" />
        
        <Button text="Add User" onAction="#handleAddUser" style="-fx-background-color: #e8f0fe; -fx-text-fill: #495057; -fx-font: bold 13px 'Calibri'; -fx-background-radius: 5; -fx-padding: 10 20; -fx-cursor: hand; -fx-border-color: #e0e0e0; -fx-border-width: 1px;" />
        
        <Label fx:id="messageLabel" text="" style="-fx-font: 13px 'Calibri'; -fx-text-fill: #dc3545; -fx-padding: 10 0 0 0;" />
    </VBox>
</VBox>
