<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.auth.controller.ProfileController" styleClass="profile-content" spacing="25" alignment="CENTER">
    <!-- Back Button -->
    <HBox alignment="TOP_LEFT" style="-fx-padding: 15;">
        <Button fx:id="backButton" text="â† Back to Dashboard" onAction="#goToDashboard" styleClass="button" />
    </HBox>

    <!-- Profile Picture -->
    <ImageView fx:id="profilePicture" fitWidth="180" fitHeight="180" preserveRatio="true" styleClass="profile-pic" />

    <!-- Profile Details -->
    <VBox spacing="10" alignment="CENTER">
        <Label fx:id="nameLabel" styleClass="profile-label" />
        <Label fx:id="emailLabel" styleClass="profile-label" />
        <Label fx:id="workLabel" styleClass="profile-label" />
        <Label fx:id="phoneLabel" styleClass="profile-label" />
    </VBox>

    <!-- Settings Section (Card) -->
    <VBox styleClass="settings-card" spacing="15" alignment="CENTER">
        <Label text="Update Your Profile" styleClass="settings-title" />
        <GridPane hgap="15" vgap="10" alignment="CENTER">
            <Label text="Email:" styleClass="label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="emailField" styleClass="text-field" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Password:" styleClass="label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="passwordField" styleClass="text-field" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        </GridPane>
        <Button fx:id="saveSettingsButton" text="Save Changes" onAction="#saveSettings" styleClass="button" />
    </VBox>

    <!-- Message Label -->
    <Label fx:id="messageLabel" styleClass="message-label" alignment="CENTER" />
</VBox>