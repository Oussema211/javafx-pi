<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.auth.controller.ResetPasswordController"
      styleClass="vbox" spacing="10" alignment="CENTER">
    <Label text="Reset Password" styleClass="label" />
    <TextField fx:id="emailField" promptText="Email" styleClass="text-field" />
    <TextField fx:id="numTelField" promptText="Phone Number" styleClass="text-field" />
    <Label fx:id="messageLabel" styleClass="message-label" />
    <Button text="Request Reset Link" onAction="#handleResetRequest" styleClass="button" />
</VBox>