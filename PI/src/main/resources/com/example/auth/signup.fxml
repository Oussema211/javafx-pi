<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.auth.controller.SignupController" styleClass="root">
    <!-- Sign-Up Form -->
    <VBox styleClass="vbox" spacing="15">
        <!-- Title -->
        <Label text="Sign Up" styleClass="label" style="-fx-font-size: 24px;" alignment="CENTER" />

        <!-- First Name (Prenom) and Last Name (Nom) -->
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="First Name" styleClass="label" />
                <TextField fx:id="prenomField" prefWidth="250" promptText="First Name" styleClass="text-field" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Last Name" styleClass="label" />
                <TextField fx:id="nomField" prefWidth="250" promptText="Last Name" styleClass="text-field" />
            </HBox>
        </VBox>

        <!-- Email and Username -->
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Email" styleClass="label" />
                <TextField fx:id="emailField" prefWidth="250" promptText="Email" styleClass="text-field" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Username" styleClass="label" />
                <TextField fx:id="usernameField" prefWidth="250" promptText="Username" styleClass="text-field" />
            </HBox>
        </VBox>

        <!-- Password and Confirm Password -->
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Password" styleClass="label" />
                <PasswordField fx:id="passwordField" prefWidth="250" promptText="Password" styleClass="password-field" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Confirm Password" styleClass="label" />
                <PasswordField fx:id="confirmPasswordField" prefWidth="250" promptText="Confirm Password" styleClass="password-field" />
            </HBox>
        </VBox>

        <!-- Work (Travail) -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Work" styleClass="label" />
            <TextField fx:id="travailField" prefWidth="250" promptText="Work/Occupation" styleClass="text-field" />
        </HBox>

        <!-- Phone Number (Num Tel) -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Phone Number" styleClass="label" />
            <TextField fx:id="numTelField" prefWidth="250" promptText="Phone Number" styleClass="text-field" />
        </HBox>

        <!-- Photo Selection (Last Field) -->
        <VBox spacing="5" alignment="CENTER">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="choosePhotoButton" text="Choose Photo" onAction="#onChoosePhotoClicked" styleClass="button" />
                <ImageView fx:id="photoPreview" fitWidth="50" fitHeight="50" preserveRatio="true" />
            </HBox>
            <Label fx:id="photoErrorLabel" alignment="CENTER" visible="false" />
        </VBox>

        <!-- Sign-Up Button -->
        <Button fx:id="signupButton" text="Sign Up" prefWidth="120" styleClass="button" onAction="#onSignupClicked" />

        <!-- Message Label for Validation Feedback -->
        <Label fx:id="messageLabel" styleClass="message-label" alignment="CENTER" />

        <!-- Login Link -->
        <Hyperlink fx:id="loginLink" text="Already have an account? Login" styleClass="hyperlink" onAction="#onLoginClicked" />
        <!-- Photo Selection -->
<VBox spacing="10" alignment="CENTER">
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="choosePhotoButton" text="Choose Photo" onAction="#onChoosePhotoClicked" styleClass="button" />
        <ImageView fx:id="photoPreview" fitWidth="100" fitHeight="100" preserveRatio="true" />
    </HBox>
    <Label fx:id="photoErrorLabel" alignment="CENTER" visible="false" />
</VBox>

    </VBox>
</StackPane>