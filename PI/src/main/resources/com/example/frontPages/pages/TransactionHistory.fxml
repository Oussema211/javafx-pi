<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cart.controller.TransactionHistoryController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: linear-gradient(to right, #6a11cb, #2575fc); -fx-padding: 30;">

    <Label text="⛓️ Historique des Transactions Blockchain"
           style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
        <VBox fx:id="transactionContainer" spacing="15" style="-fx-padding: 10;">
            <!-- Les transactions seront ajoutées dynamiquement ici -->
        </VBox>
    </ScrollPane>

</VBox>
