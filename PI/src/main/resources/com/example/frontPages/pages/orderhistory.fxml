<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cart.controller.OrderHistoryController"
            style="-fx-background-color: #f4f4f4;">

    <top>
        <VBox spacing="20" alignment="CENTER"
              style="-fx-background-color: linear-gradient(to right, #6a11cb, #2575fc); -fx-padding: 30;">
            <Label text="ðŸ“ˆ Statistiques des Commandes"
                   style="-fx-font-size: 30px; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <HBox spacing="25" alignment="CENTER">
                <!-- Carte 1 -->
                <VBox spacing="8" alignment="CENTER"
                      onMouseEntered="#handleCardHover" onMouseExited="#handleCardExit"
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 15;
                             -fx-effect: dropshadow(gaussian, #00c6ff, 20, 0.5, 0, 0); -fx-pref-width: 180;">
                    <Label text="Total Commandes" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
                    <Label fx:id="totalOrdersLabel" text="0"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                </VBox>

                <!-- Carte 2 -->
                <VBox spacing="8" alignment="CENTER"
                      onMouseEntered="#handleCardHover" onMouseExited="#handleCardExit"
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 15;
                             -fx-effect: dropshadow(gaussian, #00c6ff, 20, 0.5, 0, 0); -fx-pref-width: 180;">
                    <Label text="Total DÃ©pensÃ©" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
                    <Label fx:id="totalSpentLabel" text="0.00 DT"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                </VBox>

                <!-- Carte 3 -->
                <VBox spacing="8" alignment="CENTER"
                      onMouseEntered="#handleCardHover" onMouseExited="#handleCardExit"
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 15;
                             -fx-effect: dropshadow(gaussian, #00c6ff, 20, 0.5, 0, 0); -fx-pref-width: 180;">
                    <Label text="Prix Moyen" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
                    <Label fx:id="averagePriceLabel" text="0.00 DT"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #FF5722;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fx:id="orderScrollPane" fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox fx:id="orderContainer" spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <!-- Les cartes de commandes s'ajouteront ici -->
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
