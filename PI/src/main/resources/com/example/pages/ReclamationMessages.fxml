<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.reclamation.controller.MessagesRecController"
      spacing="0" style="-fx-background-color: #f5f6fa;">
    
    <!-- Header Section -->
    <VBox style="-fx-background-color: #3498db; -fx-padding: 15;">
        <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label fx:id="dateLabel" style="-fx-text-fill: #dfe6e9; -fx-font-size: 12px;"/>
    </VBox>
    
    <!-- Messages Area -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vvalue="1.0"
                style="-fx-background: #f5f6fa; -fx-border-color: #f5f6fa;">
        <VBox fx:id="messagesContainer" spacing="15" style="-fx-padding: 15; -fx-background-color: #f5f6fa;"/>
    </ScrollPane>
    
    <!-- Input Area -->
    <HBox fx:id="inputContainer" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-spacing: 10;" 
          alignment="CENTER_RIGHT">
        <TextArea fx:id="messageInput" promptText="Type your message here..." 
                  style="-fx-background-color: white; -fx-border-color: #bdc3c7; 
                         -fx-border-radius: 15; -fx-background-radius: 15; 
                         -fx-padding: 10; -fx-min-height: 60px; -fx-font-size: 14px;"/>
        <Button fx:id="sendButton" text="Send" onAction="#handleSendMessage" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; 
                       -fx-font-weight: bold; -fx-font-size: 14px; 
                       -fx-background-radius: 15; -fx-padding: 15 25;">
            <effect>
                <DropShadow radius="5" color="rgba(0,0,0,0.2)"/>
            </effect>
        </Button>
    </HBox>
</VBox>