<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.auth.controller.FrontDashboardController" styleClass="main-content" spacing="20">
    <HBox alignment="TOP_RIGHT" style="-fx-padding: 10;">
        <Button fx:id="profileButton" onAction="#goToProfile" styleClass="icon-button">
            <graphic>
                <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                    <Image url="@../images/profile_icon.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>
    <Label text="Dashboard Content" styleClass="content-title"/>
</VBox>